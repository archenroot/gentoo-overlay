# $Id$
depend() {
    use net
}

PIDDIR=/var/run/pids
PIDFILE=$PIDDIR/cassandra.pid
[ -d $PIDDIR ] || mkdir -m=777 $PIDDIR


start() {
    ebegin "Starting Apache Cassandra"
    start-stop-daemon --start --quiet --user cassandra --pidfile $PIDFILE --exec /opt/cassandra-3.0.13/bin/cassandra -- -p $PIDFILE
    eend $?
}

stop() {
    ebegin "Stopping Apache Cassandra"
    start-stop-daemon --stop --quiet --pidfile $PIDFILE
    eend $?
}
